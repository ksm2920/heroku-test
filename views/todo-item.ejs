<ul class="todo-list">
    <% items.forEach(item => { %>
        <% if (item._id == editId) { %>
        <!-- editing item -->
        <li class="todo-list-item">
            <form action="/edit/<%= item._id %>?page=<%=page%>&sorted=<%=sorted%>" method="post">
                <input type="text" value="<%= item.task %>" name="task">
                <button type="submit" id="confirm"><i class="fas fa-check"></i></button>
                <a href="/remove/<%= item._id %>?page=<%=page%>&sorted=<%=sorted%>" class="remove"> <span class="fas fa-times"></span></a>
            </form>
        </li>
        <% } else { %>
        <!-- viewing item -->
        <li class="todo-list-item">
            <div class="todo-list-item-name"><%= item.task %></div>
            <a href="?editId=<%= item._id %>&page=<%=page%>&sorted=<%=sorted%>" class="edit"> <span class="fas fa-pen"></span></a>
        </li>
        <% } %>
    <% }) %>
</ul>